<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColor</item>
        <item name="hintTextColor">@color/gray_a5</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/logo_splash</item>
    </style>

    <style name="LoginEditText" parent="AppTheme">
        <item name="colorControlNormal">@color/gray_da</item>
        <item name="colorControlActivated">@color/green_wx</item>
<!--        <item name="android:dividerHeight">@dimen/_05dp</item>-->
<!--        <item name="tabIndicatorHeight">@dimen/_05dp</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>
</resources>