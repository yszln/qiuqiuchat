<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/_15dp"
    android:paddingVertical="@dimen/_5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_rv_linkman_avatar"
        android:layout_width="@dimen/_45dp"
        android:layout_height="@dimen/_45dp"
        android:src="@mipmap/qiuqiu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_rv_linkman_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_marginLeft="@dimen/_12dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_rv_linkman_avatar"
        app:layout_constraintStart_toEndOf="@+id/item_rv_linkman_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_05dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_rv_linkman_username"
        app:layout_constraintTop_toBottomOf="@+id/item_rv_linkman_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>