<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_15dp"
    android:paddingVertical="@dimen/_5dp">

    <ImageView
        android:id="@+id/item_rv_message_avatar"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:src="@mipmap/qiuqiu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_rv_message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/line"
        android:text="message"
        android:padding="@dimen/_3dp"
        android:layout_marginLeft="@dimen/_6dp"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintStart_toEndOf="@+id/item_rv_message_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_rv_message_username" />

</androidx.constraintlayout.widget.ConstraintLayout>