<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yszln.qiuqiu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.search.view.SearchActivity"></activity>

        <receiver android:name=".receiver.MessageReceiver">
            <intent-filter>
                <action android:name="net.deniro.android.MY_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:launchMode="singleTask"></activity>

        <service android:name=".service.OkSocketService" />
        <service android:name=".service.WebSocketService" />

        <activity android:name=".ui.main.view.MainActivity" />
        <activity
            android:name=".ui.chat.view.FriendChatActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>